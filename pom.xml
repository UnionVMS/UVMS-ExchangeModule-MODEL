<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>fish.focus.maven</groupId>
	    <artifactId>focus-pom</artifactId>
	    <version>1.9</version>
        <relativePath />
    </parent>
    
    <groupId>eu.europa.ec.fisheries.uvms.exchange</groupId>
    <version>3.0.7</version>
    <artifactId>exchange-model</artifactId>
    <name>exchange-model</name>
    <packaging>ejb</packaging>
    <description>This module shall have interfaces, XSD, and DTOs</description>
    
    <properties>
        
        <wsdl.contract.name>ExchangeModuleService</wsdl.contract.name>
        <wsdl.source.name>ExchangeDataSourceService</wsdl.source.name>
        <wsdl.plugin.name>ExchangePluginService</wsdl.plugin.name>
        <wsdl.registry.name>ExchangeRegistryService</wsdl.registry.name>
        <javaee.version>7.0</javaee.version>
        <joda-time.version>2.9.9</joda-time.version>
        <junit.version>4.12</junit.version>
        <jibx.version>1.1.4</jibx.version>
        <sl4j.version>1.7.25</sl4j.version>
        <release.branch.name>uvms-2.0.6-kili</release.branch.name>
        <project.scm.id>github</project.scm.id>
        <binding.xml>binding-date.xml</binding.xml>
        <envClassifier>date</envClassifier>
        <guava.version>20.0</guava.version>

		<scm.connection>scm:git:https://github.com/UnionVMS/UVMS-ExchangeModule-MODEL.git</scm.connection>
    </properties>

    <repositories>
        <repository>
            <id>focus-repo</id>
            <name>Focus nexus repository</name>
            <url>http://nexus.focus.fish/nexus/</url>
        </repository>
    </repositories>

    <distributionManagement> 
        <repository>
            <id>focus-releases</id>
            <name>UnionVms Repository</name>
            <url>http://nexus.focus.fish/nexus/content/repositories/releases/</url>
        </repository>
        <snapshotRepository>
            <id>focus-snapshots</id>
            <name>UnionVms Snapshot Repository</name>
            <url>http://nexus.focus.fish/nexus/content/repositories/snapshots/</url>
        </snapshotRepository>
    </distributionManagement>

    <scm>
        <connection>${scm.connection}</connection>
      <tag>exchange-model-3.0.7</tag>
  </scm>

    <profiles>
		<profile>
			<id>dg-mare</id>
			<distributionManagement>
				<repository>
					<id>digit-releases</id>
					<name>DG DIGIT Repository</name>
					<url>https://webgate.ec.europa.eu/CITnet/nexus/content/repositories/mare/</url>
				</repository>
				<snapshotRepository>
					<id>digit-snapshots</id>
					<name>DG DIGIT Snapshot Repository</name>
					<url>https://webgate.ec.europa.eu/CITnet/nexus/content/repositories/mare-snapshots/</url>
				</snapshotRepository>
			</distributionManagement>

			<properties>
				<scm.connection>scm:git:https://emserveje@webgate.ec.europa.eu/CITnet/stash/scm/unionvms/uvms-exchangemodule-model.git</scm.connection>
			</properties>
		</profile>

        <profile>
            <id>generate-from-wsdl</id>
            <build>
                <plugins>
                    
                    <plugin>
                        <artifactId>maven-clean-plugin</artifactId>
                        <version>2.6.1</version>
                        <executions>
                            <execution>
                                <id>clean-generated-sources</id>
                                <phase>clean</phase>
                                <goals>
                                    <goal>clean</goal>
                                </goals>
                                <configuration>
                                    <filesets>
                                        <fileset>
                                            <directory>${basedir}/src/main/java/eu/europa/ec/fisheries/schema</directory>
                                        </fileset>
                                    </filesets>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.cxf</groupId>
                        <artifactId>cxf-codegen-plugin</artifactId>
                        <version>2.7.6</version>
                        <executions>
                            <execution>
                                <id>generate-exchange-module</id>
                                <phase>generate-sources</phase>
                                <configuration>
                                    <sourceRoot>${basedir}/src/main/java/</sourceRoot>
                                    <wsdlOptions>
                                        <wsdlOption>
                                            
                                            <wsdl>${basedir}/src/main/resources/contract/${wsdl.contract.name}.wsdl</wsdl>
                                            <bindingFiles>
                                                <bindingFile>${basedir}/src/main/resources/${binding.xml}</bindingFile>
                                            </bindingFiles>
                                            <extraargs>
                                                <extraarg>-xjc-XhashCode</extraarg>
                                                <extraarg>-xjc-Xequals</extraarg>
                                                <extraarg>-xjc-XtoString</extraarg>                                                                                                
                                            </extraargs>
                                        </wsdlOption>
                                    </wsdlOptions>
                                </configuration>
                                <goals>
                                    <goal>wsdl2java</goal>
                                </goals>
                            </execution>
                            <execution>
                                <id>generate-exchange-datasource</id>
                                <phase>generate-sources</phase>
                                <configuration>
                                    <sourceRoot>${basedir}/src/main/java/</sourceRoot>
                                    <wsdlOptions>
                                        <wsdlOption>
                                            
                                            <wsdl>${basedir}/src/main/resources/contract/${wsdl.source.name}.wsdl</wsdl>
                                            <bindingFiles>
                                                <bindingFile>${basedir}/src/main/resources/${binding.xml}</bindingFile>
                                            </bindingFiles>
                                            <extraargs>
                                                <extraarg>-xjc-XhashCode</extraarg>
                                                <extraarg>-xjc-Xequals</extraarg>
                                                <extraarg>-xjc-XtoString</extraarg>                                                                                                
                                           </extraargs>
                                        </wsdlOption>
                                    </wsdlOptions>
                                </configuration>
                                <goals>
                                    <goal>wsdl2java</goal>
                                </goals>
                            </execution>
                            <execution>
                                <id>generate-exchange-registry</id>
                                <phase>generate-sources</phase>
                                <configuration>
                                    <sourceRoot>${basedir}/src/main/java/</sourceRoot>
                                    <wsdlOptions>
                                        <wsdlOption>
                                            
                                            <wsdl>${basedir}/src/main/resources/contract/${wsdl.registry.name}.wsdl</wsdl>
                                            <bindingFiles>
                                                <bindingFile>${basedir}/src/main/resources/${binding.xml}</bindingFile>
                                            </bindingFiles>
                                            <extraargs>
                                                <extraarg>-xjc-XhashCode</extraarg>
                                                <extraarg>-xjc-Xequals</extraarg>
                                                <extraarg>-xjc-XtoString</extraarg>                                                
                                            </extraargs>
                                        </wsdlOption>
                                    </wsdlOptions>
                                </configuration>
                                <goals>
                                    <goal>wsdl2java</goal>
                                </goals>
                            </execution>
                            <execution>
                                <id>generate-exchange-plugin</id>
                                <phase>generate-sources</phase>
                                <configuration>
                                    <sourceRoot>${basedir}/src/main/java/</sourceRoot>
                                    <wsdlOptions>
                                        <wsdlOption>
                                         
                                            <wsdl>${basedir}/src/main/resources/contract/${wsdl.plugin.name}.wsdl</wsdl>
                                            <bindingFiles>
                                                <bindingFile>${basedir}/src/main/resources/${binding.xml}</bindingFile>
                                            </bindingFiles>
                                            <extraargs>
                                                <extraarg>-xjc-XhashCode</extraarg>
                                                <extraarg>-xjc-Xequals</extraarg>
                                                <extraarg>-xjc-XtoString</extraarg>
                                            </extraargs>
                                        </wsdlOption>
                                    </wsdlOptions>
                                </configuration>
                                <goals>
                                    <goal>wsdl2java</goal>
                                </goals>
                            </execution>
                        </executions>
                        <dependencies>
                            <dependency>
                                <groupId>org.jvnet.jaxb2_commons</groupId>
                                <artifactId>jaxb2-basics</artifactId>
                                <version>0.9.5</version>
                            </dependency>
                        </dependencies>
                    </plugin>                   
                </plugins>
            </build>
        </profile>
    </profiles>
    
    <build>
        <finalName>${project.name}-${project.version}</finalName>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-ejb-plugin</artifactId>
                <configuration>
                    <ejbVersion>3.1</ejbVersion>
                    <classifier>${envClassifier}</classifier>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-release-plugin</artifactId>
                <configuration>
                    <checkModificationExcludes>
                        <checkModificationExclude>src/main/java/eu/europa/ec/fisheries/schema</checkModificationExclude>
                    </checkModificationExcludes>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
            <version>${sl4j.version}</version>
        </dependency>
        <dependency>
            <groupId>javax</groupId>
            <artifactId>javaee-api</artifactId>
            <version>${javaee.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>joda-time</groupId>
            <artifactId>joda-time</artifactId>
            <version>${joda-time.version}</version>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>${junit.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.jibx.schema.org.apache.maven</groupId>
            <artifactId>org.jibx.schema.org.apache.maven.maven_v4_0_0</artifactId>
            <version>${jibx.version}</version>
        </dependency>
        <dependency>
            <groupId>com.google.guava</groupId>
            <artifactId>guava</artifactId>
            <version>${guava.version}</version>
        </dependency>
        <dependency>
            <groupId>org.jvnet.jaxb2_commons</groupId>
            <artifactId>jaxb2-basics</artifactId>
            <version>0.9.5</version>
        </dependency>
    </dependencies>

</project>